<!DOCTYPE html>
<html>

<!-- head -->
<%- include('./partials/head') %>
<body class="container">

    <!-- header -->
    <%- include('./partials/header') %>

    <!--Comienzo código del carrito de compras para mobile-->
    <div class="cart-mobile">
        <div class="cart-header col-12" >
            <h3 class="cart-title"><i class="fas fa-shopping-basket" id="icon-cart-mobile"></i><strong> Carrito de compras</strong></h3></br>
        </div>

    <!--SECTION-->
    <div class ="container productsCart">
        <div class = "row">
            <div class="products-cart col-12">
                <center>
                    <article class ="productCart">
                        <div>
                            <img class="cart-image col-md-4" src="/images/mesa1.jpg" alt="producto-mesa">
                        </div>
                        <div id="col-12">
                            <span class="col-12"><br>Mesa</span><br>
                            <p class="col-12">Precio: $19.990,00</p>
                            <a class="see-product-cart col-12" href="/products/:id">Ver producto</a>
                            <button type="submit" class="deleteProduct-btn">Eliminar</button>
                        </div>
                    </article>
                    <article class ="productCart">
                        <div>
                            <img class="cart-image col-md-4" src="/images/silla-1-1.jpg" alt="producto-silla">
                        </div>
                        <div id="col-12">
                            <span class="col-12"><br>Silla</span><br>
                            <p class="col-12">Precio: $2.600,00</p>
                            <a class="see-product-cart col-12" href="/products/:id">Ver producto</a>
                            <button type="submit" class="deleteProduct-btn">Eliminar</button>
                        </div>
                    </article>
                </center>
            </div>

        </div>
        <div id="ticket" class="discountCart">
            <center>
                <h5 class="col-12">Usar cupón de descuento</h5>
                <input class="col-10" id="textField" type="text" placeholder="Introduzca aquí su cupón" class ="ticket-input">
                <button class="discount-btn col-3" type="submit" class="discount-btn">Aplicar</button>
            </center>
        </div>
        <center>
            <div class="col-12">
                <div id="col-8 col-md-3">
                    <button type="submit" class="cart-options"><a href="/products/:id">Agregar productos</a></button>
                </div>
                <div id="col-8 col-md-3">
                    <button type="submit" class="cart-options"><a href="/productCartPayment"><b>Continuar compra</b></a></button>
                </div>
                <div id="col-8 col-md-3">
                    <button type="submit" class="cart-options"><a href="/products/:id">Volver a atrás</a></button>
                </div>
            </div>
        </center>
    </div>
    </div>
    <!--SECTION-->


    <!--Comienzo código del carrito de compras para desktop-->

    <div class="cart-desktop">
      <center><h1 class="cart-title2"><i class="fas fa-shopping-cart"> Carrito de compras</i></h1></center>
      <div class="container cart-menu-first-row col-11">
        <div class="row col-12" id="top-bar">
              <span class="cart-menu-title col-5" id="product-top-bar">Producto</span>
              <span class="cart-menu-title col-2" id="price-top-bar">Precio</span>
              <span class="cart-menu-title col-2" id="quantity-top-bar">Cantidad</span>
              <span class="cart-menu-title col-2" id="total-top-bar">Total</span>
              <span class="cart-menu-title col-1"></span>
        </div>
      </div>
      <div class="container col-11">
        <div class="filaCarrito row col-12 " id="product-cart-1">
              <img class="cart-image col-3" src="/images/silla1.jpg" alt="producto-silla-blanca">
              <span class="cart-menu-price col-2"><a href="/products/:id">Silla blanca</a></span>
              <span class="cart-menu-price col-2" id="price-product-cart">$5.000</span>
              <span class="cart-menu-price col-2">4</span>
              <span class="cart-menu-price col-2">$20.000</span>
              <span class="cart-menu-price col-1"><i class="fas fa-trash-alt"></i></span>
        </div>
      </div>
      <div class="container col-11">
        <div class="filaCarrito row col-12 ">
              <img class="cart-image col-3" src="/images/sofa3.jpg" alt="producto-sillón-verde">
              <span class="cart-menu-price col-2"><a href="/products/:id"> Sillón verde</a></span>
              <span class="cart-menu-price col-2">$27.0000</span>
              <span class="cart-menu-price col-2">1</span>
              <span class="cart-menu-price col-2">$27.0000</span>
              <span class="cart-menu-price col-1"><i class="fas fa-trash-alt"></i></span>
        </div>
      </div>
      <div class="container total-price col-11">
        <div class="row col-12">
              <span class="cart-menu-price col-3">TOTAL</span>
              <span class="cart-menu-price col-3"></span>
              <span class="cart-menu-price col-3"></span>
              <span class="cart-menu-price col-2">$47.0000</span>
        </div>
      </div>
      <div class="container cart-footer col-11">
        <div class="row col-12">
          <button class="cart-buttons col-3"><a href="/products/:id">Volver atrás</a></button>
          <button class="cart-buttons col-3"><a href="/products/:id">Agregar productos</a></button>
          <button class="cart-buttons col-3"><a href="/productCartPayment">Continuar compra</a></button>
        </div>
      </div>
    </div>

        <!-- footer -->
        <%- include('./partials/footer') %>
    </body>
</html>