<!DOCTYPE html>
<html>
  <!-- head -->
  <%- include('../partials/head') %>
  <body class="container">
 <!-- header -->
 <%- include('../partials/header') %>
 <%if (typeof(status) != "undefined"){
  if(status == "success"){ %>
      <div class="alert alert-success" role="alert">
          <%=mensaje%>
      </div>
  <% }
}%>

<% if (typeof errors != 'undefined') { %>
  <div class="alert alert-danger" role="alert">
      <p>Error al cargar la/s imagen/es</p>
      <ul>
          <% for( let i = 0; i < errors.length; i++ ) { %>
              <li>
                  <%= errors[i].msg %>
              </li>
          <% } %>
      </ul>
  </div>
<% } %>



        <!-- Inicio Formulario de Registro de productos-->
        <div class ="container body-form">
            <div class="form-header" >
                 <h1 class="form-title titulo-f" > <i class="fa fa-user"></i> Carga de Nuevos Productos</h1></br>
            </div>
            <form class="productAdd" method="POST" action="/products/create" enctype="multipart/form-data" >

                <div class="ul-div-errores">
                    <ul>
                    </ul>
                </div>

                      <label for = "nombre"><h6>Nombre del Producto:</h6></label>
                        <input name="nombre" id="nombre" type="text" class="form-control" required></br>
                      <label for = "descripcion"><h6>Descripción:</h6></label>
                        <input name="descripcion" id= "descripcion" type="text" class="form-control"required ></br>
                      <label for = "categoria"><h6>Categoría:</h6></label>
                        <input name="categoria" id= "categoria" type="text" class="form-control"required ></br>
                      <label for = "subcategoria"><h6>Subcategoría:</h6></label>
                        <input name="subcategoria" id= "subcategoria" type="text" class="form-control"required ></br>
                      <label for = "marca"><h6>Marca:</h6></label>
                        <input name="marca" id= "marca" type="text" class="form-control" required></br>
                      <label for = "precio"><h6>Precio:</h6></label><br>
                        <input name="precio" id="precio" type="number" class="form-control" required></br>
                      <label for = "image1"><h6>Imágenes del Producto:</h6>
                        <input name="image1" id="image1" type="file" class="btn-color "accept=".jpg, .jpeg, .png" ><br><br>
                      </label><br><br>
                      <label for = "stock"><h6>Stock:</h6><br>
                        <input name="stock" id="stock" type="number" class="form-control" required>
                      </label></br>
                      <button class="suscription-btn btn-color "  type="submit">Guardar Registro</button>
                      <button class="suscription-btn btn-color "  type="reset">Borrar Registro</button>
         </form>
     </div>

      <%- include('../partials/footer') %>
    </body>
</html>