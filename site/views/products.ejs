    <!-- Products -->
    <h1 class="products-title">Todos los productos</h1>
    <div class="container">
        <div class="row">
            <div class ="view-products">
                <% products.forEach(product => { %> 
                <article class="view-product col-12 col-md-4 col-lg-3">
                    <div>
                        <img src="images/sofa3.jpg " alt="">
                        <h5 class="product-name"><a href="/products/<%= product.id %> "><%= product.name %> </a></h5>
                        <h5 class="product-price-view">$<%= product.price %> </h5>
                    </div>
                </article>
                <% }); %>                
            </div>
        </div>
    </div>
            
            <!-- Products --> 
            <!-- footer -->
            <%- include('./partials/footer') %>    
