<!-- head -->
<%- include('../partials/head') %>
<!-- header -->
<%- include('../partials/header') %>
<body class="container">
    <%if (typeof(status) != "undefined"){
        if(status == "success"){ %>
            <div class="alert alert-success" role="alert">
                <%=mensaje%>
            </div>
        <% }
    }%>

    <% if (typeof errors != 'undefined') { %>
        <div class="alert alert-danger" role="alert">
            <p>¡Error al editar el usuario!</p>
            <ul>
                <% for( let i = 0; i < errors.length; i++ ) { %>
                    <li>
                        <%= errors[i].msg %>
                    </li>
                <% } %>
            </ul>
        </div>
    <% } %>

    <!-- Formulario de Edición de usario -->
    <div class ="container body-form">
        <div class="form-header" > 
            <h1 class="form-title titulo-f" > <i class="fa fa-user"></i>Edita tu perfil:</h1></br>
            <form action="/users/update?_method=PUT" method="POST" autocomplete="off">  
                <label for = "nombre"><h6>Nombre :</h6></label>
                <input type="text" class="form-control" id="nombre" name ="nombre" value= "<%= usuario.first_name %>" ></br>
                <label for = "apellido"><h6>Apellido:</h6></label>
                <input type="text" class="form-control" id="apellido" name ="apellido" value= "<%= usuario.last_name %>" ></br>
                <label for = "id"><h6>Dni :</h6></label>
                <input type="text" class="form-control" id="id" name ="id" value= "<%= usuario.dni_cuit %>"></br> 
                <label for = "telefono"><h6>Teléfono :</h6></label>
                <input type="text" class="form-control" id="telefono" name="telefono" value= "<%= usuario.phone %>" ></br>
                <label for = "domicilio"><h6>Domicilio :</h6></label>
                <input type="text" class="form-control" id="domicilio" name="domicilio" value= "<%= usuario.address_id %>" ></br>
                <div class="row">
                    <div class="col-12 col-md-2">
                        <label for = "codigoPostal"><h6>Código Postal :</h6></label>
                        <input  type="number" class="form-control" id="codigoPostal" name="codigoPostal"></br>
                    </div>
                    <div class="col-12 col-md-5">
                        <label for = "localidad"><h6>Localidad :</h6></label>
                        <input type="text" class="form-control" id="localidad" name="localidad"></br>
                    </div>
                    <div class="col-12 col-md-5">
                        <label for = "provincia"><h6>Provincia :</h6></label>
                        <input type="text" class="form-control" id="provincia" name="provincia"></br>
                    </div>
                </div>

                <label for = "email"><h6>Email :</h6></label> <br>
                <input type="email" class="form-control" id="email" name="email" value= "<%= usuario.email %>" readonly="readonly">
                <br>
                <button class="suscription-btn btn-color "  id="update" type="submit">Actualizar</button>
                <button class="suscription-btn btn-color "   id="borrar" type="reset">Borrar</button>
            </form>
        </div>
    </div>

<%- include('../partials/footer') %>