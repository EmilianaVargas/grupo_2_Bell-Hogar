<!DOCTYPE html>
<html>
<!-- head -->
<%- include('../partials/head') %>
<body class="container">
    <% if (typeof errors != 'undefined') { %> 
        <p style="color:red">¡ERROR!</p>
         <ul>
            <% for( let i = 0; i < errors.length; i++ ) { %>
                <li>
                    <%= errors[i].msg %> 
                </li>
                <% } %>
            </ul>
          <% } %>
    <!-- header -->
    <%- include('../partials/header') %>
    <!-- Inicio Formulario de Registro de usario-->
    <div class ="container body-form">
        <div class="form-header" > 
            <h1 class="form-title titulo-f" > <i class="fa fa-user"></i> Formulario de Registro</h1></br>
            
            <form action="/users/create" method="POST" autocomplete="off"enctype="multipart/form-data" >  
                <label for = "id"><h6>Dni :</h6></label>
                <input type="text" class="form-control" name ="id" required></br> 
                <label for = "nombre"><h6>Nombre :</h6></label>
                <input type="text" class="form-control" name ="nombre" required></br>
                <label for = "apellido"><h6>Apellido:</h6></label>
                <input type="text" class="form-control" name ="apellido" required></br>
                <label for = "telefono"><h6>Teléfono :</h6></label>
                <input type="text" class="form-control" name="telefono" required></br>
                <label for = "domicilio"><h6>Domicilio :</h6></label>
                <input type="text" class="form-control" name="domicilio" required></br>
                <label for = "image"><h6>Imagen de Perfil :</h6></label><br>
                <input type="file" name="image" class="btn-color "accept=".jpg, .jpeg, .png" required><br>
                <br>
                <label for = "email"><h6>Email :</h6></label> <br>
                <input type="email" class="form-control" name="email" required>
                <br>
                <label for = "password"><h6>Password :</h6></label><br>
                <input type="password" name="password" class="form-control" placeholder="******" required><br>
                <label for = "password2"><h6>Confirmar password :</h6></label><br>
                <input type="password" name="password2" class="form-control" placeholder="******" required><br>
                <br>
                <button class="suscription-btn btn-color "  id="IngresoLog" type="submit">Registrame</button>
                <button class="suscription-btn btn-color "   id="IngresoLog" type="reset">Borrar</button>
            </form>
        </div>
    </div>    
    <!-- Fin Formulario de Registro de Usuario -->
    <!-- footer -->
    <%- include('../partials/footer') %>
</body>
</html>