        <!-- Inicio Formulario de Registro de productos-->
        <div class ="container body-form">
            <div class="form-header" > 
                 <h3 class="form-title titulo-f" > <i class="fa fa-user"></i> Carga de Nuevos Productos</h3></br>
            </div>
            <form method="POST" action="/products/create">  
                      <label for = "id"><h6>Código del Producto:</h6></label>
                        <input name="id" id="id" type="text" class="form-control" required></br> 
                      <label for = "nombre"><h6>Nombre del Producto:</h6></label>
                        <input name="nombre" id="nombre" type="text" class="form-control" required></br>
                      <label for = "descripcion"><h6>Descripción:</h6></label>
                        <input name="descripcion" id= "descripcion" type="text" class="form-control"></br>
                      <label for = "imagen"><h6>Imagen del Producto:</h6></label><br>
                        <input name="imagen" id="imagen" type="file" class="btn-color "accept=".jpg, .jpeg, .png" ><br><br>
                      <label for = "categoria"><h6>Categoria:</h6></label>
                        <input name="categoria" id= "categoria" type="text" class="form-control" required></br>
                      <label for = "colores"><h6>Colores:</h6></label><br>
                        <input name= "colores" id="colores" type="text" class="form-control"></br>
                      <label for = "precio"><h6>Precio:</h6></label><br>
                        <input name="precio" id="precio" type="text" class="form-control" required></br>
                      <label for = "stock"><h6>Stock:</h6></label><br>
                        <input name="stock" id="stock" type="text" class="form-control"></br>
                      <br>
                      
                      <button class="suscription-btn btn-color "  id="IngresoLog" type="submit">Guardar Registro</button>
                      <button class="suscription-btn btn-color "  id="IngresoLog" type="reset">Borrar Registro</button>
         </form>
     </div>    
        
